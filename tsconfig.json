{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"moduleResolution": "node",
		"sourceMap": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"baseUrl": "."
	},
	"filesGlob": ["interfaces/**/*.d.ts", "typings/**/*.d.ts"],
	"exclude": ["node_modules"]
}
